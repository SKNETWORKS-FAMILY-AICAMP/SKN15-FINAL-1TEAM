{
  "manifest_version": 3, 
  "name": "MS Side Chat", 
  "description": "크롬 탭 오른쪽 사이드패널에 챗봇을 띄우는 확장프로그램", 
  "version": "1.0.0", 
  "icons": {
    "128": "icons/icon-128.png" 
  },
  "action": {
    "default_title": "MS Side Chat" 
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab"   
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "panel.html" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
